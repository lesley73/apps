<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ricewhite">

    <Button
        android:id="@+id/btn_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="#3E4C57"
        android:background="@color/notVricewhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/px50"
        android:layout_marginTop="@dimen/px50"/>

    <TextView
        android:id="@+id/tv_init_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_init_title"
        android:textSize="@dimen/px150"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="#006DCC"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>